package com.arthurteles.conexaodb;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;
import java.util.logging.Level;
import java.util.logging.Logger;
import java.util.Scanner ; 
import DTO.Condominio ; 
import DTO.Menu ; 

public class ConexaoDB {
 
    public static void main(String[] args) throws SQLException {
        Connection conexao ;
        conexao = null ; 
        Menu menu = new Menu(); 
        
        try {
            Class.forName("com.mysql.jdbc.Driver");        
            conexao = DriverManager.getConnection("jdbc:mysql://localhost/db_condominio","root","Hug0.D3.L3on" );
            menu.Menu();         
        
        } catch (ClassNotFoundException ex) {
            System.out.println( " Driver do Mysql n√£o encontrado " );
        } catch(SQLException ex) {
            System.out.println("Erro na conexao com o banco de dados") ;
        } finally {
            if(conexao != null){
                conexao.close(); 
            }
        }
    }
}
